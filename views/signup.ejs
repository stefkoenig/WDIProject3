//signup.ejs

<div class="col-sm-6 col-sm-offset-3">

  <h1>Signup</h1>

  <!-- show any messages that come back from authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

  <form action="/signup" method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email" >
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="name">
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
  </form>

  <hr>

  <h2>or Login with <a href="/auth/meetup" class="btn btn-primary btn-lg">Meetup</a></h2>

  <p>Or, <a href="/login">Login</a></p>
  <p>Go back, <a href="/">home</a>.</p>
</div>
